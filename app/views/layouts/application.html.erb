            <li><%= link_to "仪器管理",admin_instruments_path %></li>
            <li><%= link_to "会员管理",admin_users_path %></li>
            <li><%= link_to "专家管理",expert_users_path %></li>
          </ul>
          <ul class="nav navbar-nav pull-right">
