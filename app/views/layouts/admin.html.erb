<!DOCTYPE html>
<html>
<head>
  <title>Platform</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "陕西省大型科研仪器网管理平台",admin_instruments_path,{class: "navbar-brand"} %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
             <div class="btn-group"> 
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                 仪器管理<span class="caret"></span>
              </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "仪器管理",admin_instruments_path %></li>
                  <li><%= link_to "仪器日程管理",admin_instruments_path %></li>
                </ul>              
             </div>
            </li>
            <li><%= link_to "会员管理",admin_users_path %></li>
            <li><%= link_to "专家管理",admin_experts_path %></li>
            <li><%= link_to "订单管理",admin_reservations_path %></li>
            <li><%= link_to "科研单位管理",admin_reservations_path %></li>
          </ul>
          <% unless signed_in? %>
            <ul class="nav navbar-nav pull-right">
              <span><%= link_to "注册",new_user_path,{class: "btn btn-default",style: "margin-top: 10px;"}%></span>
              <span><%= link_to "登陆",signin_path,{class: "btn btn-default",style: "margin-top: 10px;"}%></span>
            </ul>
          <% else %>
            <ul class="nav navbar-nav pull-right">
              <span><%= link_to "当前登陆:管理员"+current_user.name,current_user,{class: "btn btn-default",style: "margin-top: 10px;"}%></span>
              <span><%= link_to "退出",signout_path,class: "btn btn-default",style: "margin-top: 10px;",method: :delete, data: { confirm: "确定要退出本次登陆吗？" }%></span>
            </ul>  
          <% end %>  
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="container padding-top">
      <div class="row">
            <%= yield %>
      </div>
    </div>
</body>
</html>
