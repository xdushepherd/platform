<%= form_for(@user,class: "form-horizontal") do |f| %>  
  <div class="form-group">
    <%= f.label :name,"用户名:", {class: "control-label col-sm-3",style: "margin-top: 5px;"} %>
    <div class="col-sm-9">
      <%= f.text_field :name,{class: "form-control"} %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :email,"邮箱:", {class: "control-label col-sm-3",style: "margin-top: 20px;"} %>
    <div class="col-sm-9">
      <%= f.text_field :email ,{class: "form-control",style: "margin-top: 15px;" } %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :password,"密码:", {class: "control-label col-sm-3",style: "margin-top: 20px;"} %>
    <div class="col-sm-9">
      <%= f.password_field :password ,{class: "form-control",style: "margin-top: 15px;" } %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation,"确认密码:", {class: "control-label col-sm-3",style: "margin-top: 20px;"} %>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation ,{class: "form-control",style: "margin-top: 15px;" } %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.submit "确认注册",{class: "btn btn-default col-md-offset-6",style: "margin-top: 15px;" }%>
  </div>
<% end %>

