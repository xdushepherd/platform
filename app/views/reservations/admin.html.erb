<div class="col-xs-12 col-sm-6 col-md-8">
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">订单详情</th>
      <th class="text-center">订单号</th>
      <th class="text-center">订单状态</th>
      <th class="text-center">金额</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td class="text-center"><%= reservation.user_id %></td>
        <td class="text-center"><%= reservation.ser_number %></td>
        <td class="text-center"><%= reservation.status %></td>
        <td class="text-center">
            <%= link_to '订单详情', reservation,{class: "btn btn-primary",style: "margin-left: 10px;" }%>
            <%= link_to '变更信息', edit_reservation_path(reservation),{ class: "btn btn-primary",style: "margin-left: 10px;" } %>
            <%= link_to '删除订单', reservation, method: :delete,
                                   data: { confirm: 'Are you sure?' },class: "btn btn-primary"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-xs-6 col-md-4" style="margin-top: 100px;">
              <h3>筛选订单</h3>
              <%= search_form_for @q,class: "form-horizontal" do |f| %>
                 <fieldset>
                 <div class="form-group">
                    <%= f.label "付款人",{ class: "control-label col-md-3" } %>
                    <div class="col-md-8">
                      <%= f.text_field :user_id_cont,{ class: "form-control" } %>
                    </div>
                 </div>   
                 <div class="form-group">
                    <%= f.label "订单号",{ class: "control-label col-md-3" } %>
                    <div class="col-md-8">
                      <%= f.text_field :ser_number_cont,{ class: "form-control" } %>
                    </div>
                 </div>   
                 <div class="form-group">
                    <%= f.label "订单状态 ",{ class: "control-label col-md-3" } %>
                    <div class="col-md-8">
                      <%= f.text_field :status_cont,{ class: "form-control" } %>
                    </div>
                 </div>   
                 <div class="form-group">
                  <div class="col-sm-offset-6 col-sm-10" style="margin-top: 30px;">
                    <%= f.submit "查询",{type: "button",class: "btn btn-primary"} %>
                  </div>  
                 </div>
                 </fieldset>   
              <% end %>
</div>